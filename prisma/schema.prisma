generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  isAdmin  Boolean  @default(false)
  trades   Trade[]

  @@map("users")
}

model Trade {
  id                 Int       @id @default(autoincrement())
  symbol             String
  quote              String    @default("USDT")
  side               String    @default("LONG")
  entry_price        Float     @default(0)
  tp_price           Float     @default(0)
  sl_price           Float     @default(0)
  quantity           Float     @default(0)
  status             String    @default("PENDING")
  opened_at          DateTime?
  entry_hit_at       DateTime?
  closed_at          DateTime?
  post_url           String?
  pnl_unrealized_pct Float     @default(0)
  pnl_realized_pct   Float     @default(0)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  userId             Int
  user               User      @relation(fields: [userId], references: [id])

  @@index([status, symbol])
  @@index([createdAt])
  @@map("trades")
}
